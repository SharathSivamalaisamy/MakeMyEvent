<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foregroundTint="@android:color/holo_purple"
    app:cardBackgroundColor="#F0EEF1"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="392dp"
        android:layout_height="match_parent"
        android:outlineAmbientShadowColor="@android:color/holo_purple"
        android:outlineSpotShadowColor="@color/purple_200">


        <TextView
            android:id="@+id/BT"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Event Name :"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Au"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BT"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            android:text="Description:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Ed"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Au"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            android:text="Link :"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/BT"
            android:padding="5dp"
            android:text="Event Name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/Au"
            android:padding="5dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/registrationLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginStart="10dp"

            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/Ed"
            android:padding="3dp"
            android:text="Link"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
