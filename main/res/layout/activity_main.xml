<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <View
        android:id="@+id/topviewmain"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topviewmain" />

    <TextView
        android:id="@+id/MainTitle"
        android:layout_width="274dp"
        android:layout_height="68dp"
        android:text="MakeMyEvent "
        android:textColor="@android:color/white"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/topviewmain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/topviewmain"
        app:layout_constraintTop_toTopOf="@+id/topviewmain"
        app:layout_constraintVertical_bias="0.553" />

    <Button
        android:id="@+id/Googlesignin"
        android:layout_width="195dp"
        android:layout_height="59dp"
        android:layout_marginTop="189dp"
        android:background="@color/black"
        android:backgroundTint="@android:color/holo_purple"
        android:text="Sign In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintVertical_bias="0.067"
        app:rippleColor="#0099CC" />

    <ImageView
        android:id="@+id/googlelogo"
        android:layout_width="58dp"
        android:layout_height="45dp"


        app:layout_constraintBottom_toBottomOf="@+id/Googlesignin"
        app:layout_constraintEnd_toStartOf="@+id/Googlesignin"

        app:layout_constraintHorizontal_bias="0.807"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintVertical_bias="0.97"
        app:srcCompat="@drawable/img"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>